<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texViewToDoList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Do List"
        android:textColor="@color/purple_dark"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
         />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="8dp"
        />

    <EditText
        android:id="@+id/edTxEmailLogin"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/background_edit_text"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="8dp"
        android:elevation="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        tools:ignore="SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        />


    <EditText
        android:id="@+id/edTxPassLogin"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/background_edit_text"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="8dp"
        android:elevation="16dp"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        tools:ignore="SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/txViewForgotPassLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="55dp"/>

    <Button
        android:id="@+id/btLogin"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_bt"
        android:text="signin"
        android:textColor="#F293AD"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Don't have an account?"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/txViewCreatLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Create"
            android:textSize="14sp"
            android:textColor="#F293AD"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>