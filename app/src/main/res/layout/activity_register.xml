<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register">


    <ImageButton
        android:id="@+id/imBtBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/back"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/teViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="40sp"
        android:textColor="@color/purple_dark"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/texViewNameReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginStart="50dp"/>

    <EditText
        android:id="@+id/edTxNameReg"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/background_edit_text"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:elevation="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"/>



    <TextView
        android:id="@+id/texViewEmailReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        />

    <EditText
        android:id="@+id/edTxEmailReg"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:background="@drawable/background_edit_text"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:elevation="16dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/texViewPassReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edTxPassReg"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/background_edit_text"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:elevation="16dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/btSignupReg"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="SIGNUP"
        android:textSize="20sp"
        android:textColor="#F293AD"
        android:background="@drawable/background_bt"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"/>


</LinearLayout>